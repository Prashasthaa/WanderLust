<style>
  .timer-line {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 4px;
    background-color: #198754;
    width: 100%;
    animation: shrinkLine 3s linear forwards;
    border-radius: 0 0 4px 4px;
  }

  @keyframes shrinkLine {
    from {
      width: 100%;
    }
    to {
      width: 0%;
    }
  }
</style>

<%if(success&&success.length){%>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3"
  role="alert"
  id="success-alert"
>
  <%=success%>
  <div class="timer-line"></div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%> <%if(error&&error.length){%>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offsset-3"
  role="alert"
>
  <%=error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%>

<script>
  setTimeout(() => {
    const successAlert = document.getElementById("success-alert");
    if (successAlert) {
      const bsAlert = new bootstrap.Alert(successAlert);
      bsAlert.close();
    }
  }, 5000);
</script>
